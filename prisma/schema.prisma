model TBL_NETWORKINGCLIENT {
  id                 String               @id @default(uuid())
  ipAddress          String
  navegador          String
  ubicacion          String
  TBL_NETWORKINGLOGS TBL_NETWORKINGLOGS[]
}

model TBL_NETWORKINGLOGS {
  id                  String @id @default(uuid())
